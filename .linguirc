{
    "locales": ["en", "es", "fr", "jp", "cn", "pt", "ru", "ko"],
    "fallbackLocales": {
        "default": "en"
    },
    "sourceLocale": "en",
    "catalogs": [
        {
            "path": "<rootDir>/public/locales/{locale}/messages",
            "include": ["<rootDir>/app", "<rootDir>/components"],
            "exclude": ["node_modules", "public", "build", "dist"]
        }
    ],
	"format": "po",
	"compileNamespace": "es",
	"extractorParserOptions": {
		"tsExperimentalDecorators": false,
		"flow": false
	},
	"orderBy": "messageId",
	"runtimeConfigModule": ["@lingui/core", "i18n"]
}
